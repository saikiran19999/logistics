@page "/subscription-plans"
@inherits PageBase

<RadzenText TextStyle="TextStyle.H3">Subscription Plans</RadzenText>
<hr/>

<RadzenButton class="mb-3" Click="@(() => Navigation.NavigateTo("/subscription-plans/add"))">Add</RadzenButton>

<RadzenGrid Data="_subscriptionPlans"
            LoadData="LoadData"
            Count="_totalRecords"
            AllowPaging="true"
            AllowSorting="true"
            PageSizeOptions="new[] { 10, 25, 50 }"
            PageSize="10">
    <Columns>
        <RadzenGridColumn TItem="SubscriptionPlanDto"
                          Property="Name"
                          Title="Name">
        </RadzenGridColumn>
        <RadzenGridColumn TItem="SubscriptionPlanDto"
                          Property="Description"
                          Title="Description">
        </RadzenGridColumn>
        <RadzenGridColumn TItem="SubscriptionPlanDto"
                          Property="Price"
                          Title="Price">
            <Template Context="subscriptionPlan">
                <CurrencyText Value="subscriptionPlan.Price"/>
            </Template>
        </RadzenGridColumn>
        <RadzenGridColumn TItem="SubscriptionPlanDto" Title="Action">
            <Template Context="subscriptionPlan">
                <RadzenButton Click="@(() => Navigation.NavigateTo($"subscription-plans/{subscriptionPlan.Id}"))">Edit</RadzenButton>
            </Template>
        </RadzenGridColumn>
    </Columns>
</RadzenGrid>
