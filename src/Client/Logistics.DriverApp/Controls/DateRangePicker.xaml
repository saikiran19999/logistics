<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Logistics.DriverApp.Controls.DateRangePicker"
             x:Name="This">
    <HorizontalStackLayout>
        <Label Text="Select range: " HorizontalOptions="Center" VerticalOptions="Center" />
        <DatePicker Date="{Binding StartDate, Source={x:Reference This}}" />
        <Label Text=" - " HorizontalOptions="Center" VerticalOptions="Center" />
        <DatePicker Date="{Binding EndDate, Source={x:Reference This}}" />
    </HorizontalStackLayout>
</ContentView>
